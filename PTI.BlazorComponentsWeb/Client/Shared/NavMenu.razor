<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">PTI.BlazorComponentsWeb</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Samples/Twitter">
                <span class="oi oi-plus" aria-hidden="true"></span> Twitter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Samples/LinkedIn">
                <span class="oi oi-list-rich" aria-hidden="true"></span> LinkedIn
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Samples/Grid">
                <span class="oi oi-list-rich" aria-hidden="true"></span> DataGrid
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
